{
  "name": "yui",
  "version": "0.3.0",
  "description": "Natural language smart home orchestration via MCP servers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces && tsc -p tsconfig.json",
    "build:packages": "npm run build --workspaces",
    "dev": "npx ts-node src/main.ts",
    "debug": "LOG_LEVEL=debug npx ts-node src/main.ts",
    "start": "LOG_LEVEL=info node dist/main.js",
    "pm2:start": "npm run build && pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "npm run build && pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "setup:hue": "npm run setup -w packages/mcp-hue",
    "dev:hue": "npx ts-node packages/mcp-hue/src/index.ts",
    "setup:nuki": "npm run setup -w packages/mcp-nuki --",
    "dev:nuki": "npx ts-node packages/mcp-nuki/src/index.ts",
    "dev:browser": "npx ts-node packages/mcp-browser/src/index.ts",
    "setup:spotify": "npm run setup -w packages/mcp-spotify",
    "setup:spotify:speakers": "npm run setup:speakers -w packages/mcp-spotify",
    "dev:spotify": "npx ts-node packages/mcp-spotify/src/index.ts",
    "dev:linear": "npx ts-node packages/mcp-linear/src/index.ts",
    "dev:samsung": "npx ts-node packages/mcp-samsung/src/index.ts",
    "setup:calendar": "npm run setup -w packages/mcp-calendar",
    "dev:calendar": "npx ts-node packages/mcp-calendar/src/index.ts",
    "dev:weather": "npx ts-node packages/mcp-weather/src/index.ts",
    "dev:obsidian": "npx ts-node packages/mcp-obsidian/src/index.ts",
    "voice": "python3 src/voice_pipeline.py",
    "xtts-server": "COQUI_TOS_AGREED=1 /home/chuya/.venvs/xtts/bin/python src/xtts_server.py",
    "record-voice": "python3 src/record_voice.py",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "lint:check": "eslint \"**/*.ts\"",
    "lint": "eslint \"**/*.ts\" --fix",
    "test": "jest",
    "test:e2e": "jest --selectProjects e2e",
    "test:unit-int": "jest --selectProjects unit-integration",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "lint-staged"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.3",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/node-cron": "^3.0.11",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "openai": "^4.85.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
